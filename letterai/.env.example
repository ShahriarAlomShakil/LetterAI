# Environment variables for LetterAI
# Copy this file to .env and fill in your actual values

# AI Provider Configuration
AI_PROVIDER=openai  # Options: openai, gemini
DEFAULT_AI_PROVIDER=openai

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_MAX_TOKENS=800
OPENAI_TEMPERATURE=0.7

# Gemini API Configuration
GEMINI_API_KEY=your_gemini_api_key_here
GEMINI_MODEL=gemini-1.5-flash
GEMINI_MAX_TOKENS=800
GEMINI_TEMPERATURE=0.7

# App Configuration
APP_NAME=LetterAI
APP_VERSION=1.0.0
APP_BUILD_NUMBER=1

# Feature Flags
ENABLE_AI_FEATURES=true
ENABLE_PDF_EXPORT=true
ENABLE_ANALYTICS=false
ENABLE_CRASH_REPORTING=true

# Development Settings
DEBUG_MODE=false
VERBOSE_LOGGING=false

# API Endpoints (if using custom backend)
API_BASE_URL=https://api.letterai.com
API_TIMEOUT=30000

# Storage Configuration
MAX_LETTERS_CACHE=100
AUTO_SAVE_INTERVAL=30000

# PDF Generation Settings
DEFAULT_PDF_TEMPLATE=modern
DEFAULT_FONT_FAMILY=handwriting
PDF_PAGE_FORMAT=a4

# Security Settings
ENCRYPTION_ENABLED=true
DATA_RETENTION_DAYS=365
